{
    "igvm": {
        "qemu": {
            "output": "coconut-qemu.igvm",
            "platforms": [
                "snp",
                "tdp",
                "native"
            ],
            "policy": "0x30000",
            "measure": "print",
            "check-kvm": true
        }
    },
    "kernel": {
        "svsm": {
            "manifest": "kernel/Cargo.toml",
            "features": "vtpm",
            "binary": true
        },
        "stage2": {
            "manifest": "stage2/Cargo.toml",
            "binary": true,
            "objcopy": "binary"
        },
        "tdx-stage1": {
            "type": "make",
            "output_file": "bin/stage1-trampoline",
            "objcopy": "binary"
        }
    },
    "firmware": {
        "env": "FW_FILE"
    },
    "fs": {
        "modules": {
            "userinit": {
                "path": "/init"
            }
        }
    }
}
